{% extends 'base.html.twig' %}

{% block title %}Wild Circus{% endblock %}

{% block body %}
<body id="page-top" class="fade-in">

  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-light fixed-top py-3" id="mainNav">
    <div class="container-fluid">
      <a class="navbar-brand js-scrollTo" href="#page-top"><h5 class="font-weight-bold text-danger">Wild Circus</h5></a>
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto my-2 my-lg-0">
            <li class="nav-item">
              <a class="nav-link js-scroll-trigger text-info js-scrollTo" href="#performances"><h5 class="font-weight-light">Performances</h5></a>
            </li>
            <li class="nav-item">
              <a class="nav-link js-scroll-trigger text-info text-font-lighter js-scrollTo" href="#about"><h5 class="font-weight-light">About us</h5></a>
            </li>
            <li class="nav-item">
              <a class="nav-link js-scroll-trigger text-info text-font-lighter js-scrollTo" href="#prices"><h5 class="font-weight-light">Prices</h5></a>
            </li>
            <li class="nav-item">
              <a class="nav-link js-scroll-trigger text-info text-font-lighter js-scrollTo" href="#contact"><h5 class="font-weight-light">Contact</h5></a>
            </li>
          </ul>
      </div>
    </div>
  </nav>

  <!-- Masthead -->
  <header class="masthead">
    <div class="container-fluid h-100">
      <div class="row h-100 align-items-center justify-content-center text-right">
        <div class="col-lg-10 align-self-end">
          <h1 class="text-uppercase text-danger font-weight-lighter title">WILD CIRCUS</h1>
        </div>
        <div class="col-lg-9 align-self-baseline mt-3">
          <a class="btn btn-danger btn-xl js-scroll-trigger font-weight-lighter js-scrollTo faa-vertical faa-slow animated" href="#performances">Discover us</a>
        </div>
      </div>
    </div>
  </header>

  <!-- Performances Section -->
  <section class="page-section h-75 d-flex align-middle" id="performances">
    <div class="container">
      <h1 class="text-center font-weight-lighter text-danger mt-0">Performances</h1>
      <hr class="divider my-4">
      <div class="row">
        {% for performance in performances %}
        <div class="col-lg-4 col-md-6 d-flex justify-content-center">
          <div class="mt-3 mx-2">
            <i class="fas fa-4x fa-gem text-primary mb-4"></i>
            <h3 class="h4 mb-2 text-center font-weight-light">{{ performance.titre }}</h3>
            <p class=" mb-0 text-justify font-weight-lighter mt-4">
              {{ performance.libel }}</p>
          </div>
        </div>
        {% endfor %}

      <div class="col text-center my-4">
        <a class="btn btn-danger btn-xl js-scroll-trigger font-weight-lighter js-scrollTo faa-vertical faa-slow animated" href="#about">About us</a>
      </div>
    </div>
  </section>

  <!-- image performances Section -->
  <section class="h-25 imgperformances">
  </section>

  <!-- about section -->
  <section class="page-section h-100 d-flex align-middle" id="about">
    <div class="container">
      <h1 class="text-center font-weight-lighter text-danger mt-0">About us</h1>
      <hr class="divider my-4">
      <div class="row">
        {% for gallerie in galleries %}
        <div class="col-lg-4 col-md-4 col-6 p-0">
          <a href="#" class="d-block h-100">
            <img class="img-fluid border border-light rounded-lg" id="grayscale" src={{ gallerie.url }} alt={{ gallerie.alt }}>
          </a>
        </div>
        {% endfor %}

        <div class="col text-center">
          <a class="btn btn-danger btn-xl js-scroll-trigger font-weight-lighter my-5 js-scrollTo faa-vertical faa-slow animated" href="#prices">small prices, great show ! Continue ?</a>
        </div>
      </div>
      </div>
    </div>
  </section>

  <!-- Rejoignez l'aventure Section -->

  <section class="page-section bg-danger text-white h-25 p-0 pt-4" id="prices">
    <div class="container text-center">
      <h1 class="mb-4 font-weight-lighter">Join the adventure</h1>
      <a class="btn btn-light text-danger btn-xl font-weight-light faa-vertical faa-slow animated">Book now !</a>
    </div>
  </section>


  <section class="page-section h-65 d-flex align-middle">
    <div class="container">
      <h1 class="text-center font-weight-lighter text-danger mt-0">Prices</h1>
      <hr class="divider my-4">
      <div class="row">
        <table class="table table-sm table-danger text-dark font-weight-lighter table-striped table-borderless">
          <thead>
          <tr class="table-light text-center">
            <th class="font-weight-normal" scope="col"></th>
            <th class="font-weight-normal text-center" scope="col">Adults</th>
            <th class="font-weight-normal" scope="col">Children (under 12)</th>
            <th class="font-weight-normal" scope="col">Groups (+ 10 pers.)</th>
            <th class="font-weight-normal" scope="col">Scholar</th>
          </tr>
          </thead>
          <tbody>
          <tr class="text-center border-top border-danger">
            <th class="font-weight-normal text-left" scope="row">Monday to Friday</th>
            <td class="">20€</td>
            <td class="">10€</td>
            <td class="">20€</td>
            <td class="">12€</td>
          </tr>
          <tr class="text-center border-bottom border-danger">
            <th class="font-weight-normal text-left" scope="row">Wed and week-end</th>
            <td>25€</td>
            <td>15€</td>
            <td>20€</td>
            <td>15€</td>
          </tr>
          </tbody>
        </table>
      </div>
      <div class="row">
        <div class="col text-center">
          <a class="btn btn-danger btn-xl font-weight-lighter my-5 js-scrollTo" href="#contact">Questions ? Contact us</a>
        </div>
      </div>
    </div>
  </section>


  <!-- image performances Section -->
  <section class="h-2 imgprices">
  </section>

  <!-- Contact Section -->
  <section class="page-section" id="contact">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-8 text-center">
        <h1 class="mt-0 text-danger font-weight-lighter">Let's Get In Touch!</h1>
          <hr class="divider my-4">
          <p class="text-center font-weight-lighter mt-4">Ready to come visit us ? Give us a call or send us an email and we will get back to you as soon as possible!</p>
        </div>
      </div>
      <div class="row">
        <div class="col-lg-4 ml-auto text-center mb-5 mb-lg-0 font-weight-lighter">
          <div>+1 (202) 555-0149</div>
        </div>
        <div class="col-lg-4 mr-auto text-center">
          <a class="d-block font-weight-lighter" href="mailto:contact@yourwebsite.com">contact@wildcircus.com</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-danger py-4">
    <div class="container">
      <div class="small font-weight-lighter text-center text-light">Copyright &copy; 2019 - Adrien MECHIN</div>
    </div>
  </footer>


{% endblock %}
